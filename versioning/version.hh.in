#pragma once

#include <string>
#include <string_view>

namespace Versioning {

struct Version {
  size_t major;
  size_t minor;
  size_t patch;
  std::string_view build_id;
  std::string_view git_commit;
  std::string_view branch_name;
  std::string_view base_tag;
  std::string_view description;
  size_t distance;
  bool is_dirty;
  //! @TODO possible future additions
  // these may also violate reproducible builds, so maybe not
  // if the build directory is dirty, that is less of a concern
  // so perhaps they're optionals? or only exist if the directory is dirty, or something to that effect
  // build date
  // build time
  // commit date
  // commit time
};

}

